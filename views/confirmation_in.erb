<style>
  /* Styling for buttons */
  button {
    width: 20%;
    height: 10%;
    font-size: 2vw;
    border-radius: 25px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    margin-top: 20px;
    background-color: #FFFFE0;
  }

  /* Styling for the button container */
  .button-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    height: 60%;
  }

  /* Button hover effect */
  button:hover {
      background-color: grey;
  }

  /* Button click effect */
  button:active {
      background-color: #282828;
  }

  /* Styling for the "Sign Out" button on hover */
  #sign_out:hover{
    background-color: grey;
  }

  /* Styling for the "Sign Out" button on click */
  #sign_out:active{
    background-color: #282828;
  }

  /* Styling for buttons with the class "my_buttons" */
  .my_buttons{
    width: 20vw; 
    height: 100%;
    font-size: 2vw;
    border-radius: 25px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    background-color: #FFFFE0;
  } 
</style>

