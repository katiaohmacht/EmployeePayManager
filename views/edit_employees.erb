<style>
/* Add padding to container elements */
.container {
  padding: 5px;
  margin: 6 auto;
}

/* Modal Content/Box */
.edit {
  background-color: whitesmoke;
  border: 2px solid #D8F3EC;
  min-height: 92%;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
  border-radius: 25px;
  padding-left: 5%;
  padding-right: 5%;
  margin: 0 auto;
  overflow: hidden;
}

/* Style the horizontal ruler */
hr {
  border: 1px solid #f1f1f1;
  margin-bottom: 25px;
}

/* The Close Button (x) */
.close {
  position: absolute;
  right: 35px;
  top: 15px;
  font-size: 40px;
  font-weight: bold;
  color: #f1f1f1;
}

.close:hover,
.close:focus {
  color: #f44336;
  cursor: pointer;
}

/* Style for h1 element */
h1 {
  font-size: 2vw;
  margin-left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  position: relative;
  padding-bottom: 1%;
  color: black;
}

/* Styling for the delete button */
.delete-button {
  background-color: #ff6347;
  color: white; /* White text for the delete button */
  border: none;
  width: 100%;
  height: 100%;
  cursor: pointer;
}

/* Styling for the h1's after pseudo-element */
h1::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 110%;
  height: 2px;
  background-color: #000;
}

/* Styling for a container with flex display */
.my_container {
  display: flex;
  align-items: center; /* Center contents vertically within the container */
}

/* Styling for paragraphs within .my_container */
.my_container p {
  font-size: 25px;
  margin: 0 2%;
  color: black;
  flex: 1; /* Take up remaining horizontal space */
}

/* Styling for the user table */
#user-table {
  margin-top: 20px;
  border-collapse: collapse;
  width: 95%;
  margin: 0 auto;
}

/* Styling for table headers and data cells */
#user-table th,
#user-table td {
  border: 1px solid #4CAF50; /* Green border */
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 2vw;
  padding-right: 2vw;
  text-align: left;
}

/* Styling for table headers */
#user-table th {
  background-color: #4CAF50; /* Green background for headers */
  color: white; /* White text for headers */

  /* Styling for even rows */
  #user-table tr:nth-child(even) {
    background-color: #f2f2f2; /* Light gray background for even rows */
  }

  /* Styling for row hover effect */
  #user-table tr:hover {
    background-color: #D0F0C0; /* Light green background for hover effect */
  }

  /* Styling for hovered data cells */
  #user-table td:hover {
    background-color: #A2E182;
  }

  /* Styling for the table container */
  .table-container {
    margin: 20px auto;
  }
</style>


<div class="right">
  <div id="id01" class="edit">
    <!-- Close button to close the modal -->
    <span onclick="window.location.href='/admin_main'" class="close" title="Close Modal">&times;</span>
    <form action="/delete_process" method="post">
      <div class="container">
        <div id="user-table">
          <h1>Edit Employees</h1>
          <hr>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <!-- Table headers -->
                  <th>Employee ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Active Status</th>
                  <th>Edit</th>
                  <th>Deactivate</th>
                  <th>Recent Pay Period</th>
                  <th>Edit Work History</th>
                  <th>View Past Pay Periods</th>
                </tr>
              </thead>
              <tbody>
                <!-- Loop through user data and populate the table -->
                <% @users.each do |user| %>
                <tr>
                  <td><%= user.employee_id %></td>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.active %></td>
                  <td>
                    <!-- Edit button for user -->
                    <button class="edit-button" formaction="/edit" data-id="<%= user.id %>">Edit</button>
                  </td>
                  <td>
                    <!-- Delete button for user -->
                    <button class="delete-button" data-id="<%= user.id %>">X</button>
                  </td>
                  <td>
                    <!-- Button to download work history -->
                    <button class="work_history" formaction="/work_history_process" data-id="<%= user.id %>">Download</button>
                  </td>
                  <td>
                    <!-- Edit Work History button -->
                    <button formaction="/switch_work" method="post" type="submit" class="edit-button" data-id="<%= user.id %>">Edit</button>
                  </td>
                  <td>
                    <!-- View Past Pay Periods button -->
                    <button formaction="/view_pay_reports" method="post" type="submit" class="work_history" data-id = "<%= user.id %>">View</button>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- Hidden input field to store user ID -->
        <input type="hidden" id="user_id_input" name="user_id">
      </div>
    </form>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  // Fetch user data and update the table
  $(document).ready(function() {
    $.get('/users', function(data) {
      $('#user-table').html(data);
    });
  });

  // JavaScript to handle user deletion
  $(document).ready(function() {
    $('.delete-button').click(function() {
      const userId = $(this).data('id');
  
      // Populate the hidden input field in the form with the user ID
      $('#user_id_input').val(userId);
  
      // Submit the form
      $('form').submit();
    });
  });

  // JavaScript to handle user editing
  $(document).ready(function() {
    $('.edit-button').click(function() {
      const userId = $(this).data('id');
  
      // Populate the hidden input field in the form with the user ID
      $('#user_id_input').val(userId);
  
      // Submit the form
      $('form').submit();
    });
  });

  // JavaScript for Work History download
  $(document).ready(function () {
    $('.work_history').click(function () {
      const userId = $(this).data('id');
      
      // Populate the hidden input field in the form with the user ID
      $('#user_id_input').val(userId);

      // Submit the form
      $('form').submit();
    });
  });
</script>


