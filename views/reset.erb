<style>
  /* Full-width input fields */
  input[type=text], input[type=password] {
    width: 100%;
    padding: 15px;
    margin: 5px 0 22px 0;
    display: inline-block;
    border: none;
    background: #f1f1f1;
  }

  /* Add a background color when the inputs get focus */
  input[type=text]:focus, input[type=password]:focus {
    background-color: #ddd;
    outline: none;
  }

  /* Set a style for all buttons */
  button {
    background-color: #04AA6D;
    color: white;
    font-size: 1.5vw;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    opacity: 0.9;
  }

  /*Set button hover opacity*/
  button:hover {
    opacity:1;
  }

  /*Set list styles*/
  li{
    list-style: none;
  }
  li::before{
    content: none;
  }
  li a:hover{
    color: #301934;
  }

  /* Extra styles for the cancel button */
  .cancelbtn {
    padding: 14px 20px;
    background-color: #f44336;
    margin-right: 5%;
  }

  /* Set position of sign up button - reset button */
  .signupbtn{
    margin-left: 5%;
  }

  /* Float cancel and signup buttons and add an equal width */
  .cancelbtn, .signupbtn {
    float: left;
    width: 45%;
    height: 7vh;
    border-radius: 25px;
    margin-bottom:5%;
  }

  /* Add padding to container elements */
  .container {
    padding: 16px;
    margin:5%;
  }


  /* Modal Content/Box */
  .signup {
    background-color: whitesmoke;
    margin-top: 2%;
    border: 2px solid #D8F3EC;
    padding-left:5%;
    padding-right:5%;
    height: 80%;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    border-radius: 25px;
    margin-left: 5%;
    margin-right: 5%;
  }

  /* Style the horizontal ruler */
  hr {
    border: 1px solid #f1f1f1;
    margin-bottom: 25px;
  }
  
  /* The Close Button (x) */
  .close {
    position: absolute;
    right: 35px;
    top: 15px;
    font-size: 40px;
    font-weight: bold;
    color: #f1f1f1;
  }

  /*Close button styling*/
  .close:hover,
  .close:focus {
    color: #f44336;
    cursor: pointer;
  }

  /* Clear floats */
  .clearfix::after {
    content: "";
    clear: both;
    display: table;
  }

  /* Change styles for cancel button and signup button on extra small screens */
  @media screen and (max-width: 300px) {
    .cancelbtn, .signupbtn {
      width: 100%;
    }
  }

  /*Position - layout*/
  .float-child {
      width: 50%;
      float: left;
      padding: 10px;
  } 

  /*Set h1 styling*/
  h1 {
    font-size: 3vw;
    margin-left: 50%;
    transform: translateX(-50%);
    display: inline-block;
    position: relative;
    padding-bottom: 1%;
    color: black;
  }

  /*Line underneath h1*/
  h1::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 110%;
      height: 2px;
      background-color: #000;
    }

  /*Style input box*/
  .my_inputs{
    height: 6vh;
    font-size: 1.5vw;

  }

  /*Style boxes for entering new password*/
  .my_labels{
    height: 6vh;
    font-size: 1.5vw;

  }

  /*Create a float container*/
  .float-container{
    margin-top: 15%;
  }

  /*Center contents*/
  .my_container {
      display: flex;
      align-items: center; 
  }

  /*Style text in my_container div*/
  .my_container p {
      font-size: 25px;
      margin: 0 5%; 
      color: black;
      flex: 1;
  }


  /*Style link*/
  a{
    font-size: 25px;
    color: darkblue;
  }
</style> 

<div class="right">
  <div id="id01" class="signup">
    <!-- Close button for modal -->
    <span onclick="window.location.href='/login'" class="close" title="Close Modal">&times;</span>
    
    <!-- Form for resetting the password -->
    <form action="/sign_up_process" method="post">
      <div class="container" style="background-color: whitesmoke;">
        <h1>Reset Password</h1>
        <hr>

        <!-- Input field for new password -->
        <label for="psw" class="my_labels"><b>New Password</b></label>
        <input type="password" placeholder="Enter New Password" name="psw" id="psw" class="my_inputs" required>

        <div class="clearfix">
          <!-- Cancel button that redirects to the home page -->
          <button type="button" onclick="window.location.href='/'" class="cancelbtn"><b>Cancel</b></button>

          <!-- Submit button for confirming the new password, with a custom form action -->
          <button type="submit" formaction="/reset_button" class="signupbtn"><b>Confirm New Password</b></button>
        </div>
      </div>
    </form>
  </div>
</div>


<script>
  // Get the modal
  var modal = document.getElementById('id01');

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
      // Redirect to index on modal close
      window.location.href = '/'; 
    }
  }
</script>
