 <style>



/* Full-width input fields */
input[type=text], input[type=password] {
  width: 100%;
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}

/* Add a background color when the inputs get focus */
input[type=text]:focus, input[type=password]:focus {
  background-color: #ddd;
  outline: none;
}

/* Set a style for all buttons */
button {
  background-color: #04AA6D;
  color: white;
  font-size: 1.5vw;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
  opacity: 0.9;
}

button:hover {
  opacity:1;
}

li{
  list-style: none;
}
li::brefore{
  content: none;
}
li a:hover{
  color: #301934;
}

/* Extra styles for the cancel button */
.cancelbtn {
  padding: 14px 20px;
  background-color: #f44336;
  margin-right: 5%;
}

.signupbtn{
  margin-left: 5%;
}

/* Float cancel and signup buttons and add an equal width */
.cancelbtn, .signupbtn {
  float: left;
  width: 45%;
  height: 7vh;
  border-radius: 25px;
  margin-bottom:5%;
}

/* Add padding to container elements */
.container {
  padding: 16px;
  margin:5%;
}


/* Modal Content/Box */
.signup {
  background-color: whitesmoke;
  margin-top: 2%;
  border: 2px solid #D8F3EC;
  padding-left:5%;
  padding-right:5%;
  height: 94%;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
  border-radius: 25px;
  margin-left: 5%;
  margin-right: 5%;
}

/* Style the horizontal ruler */
hr {
  border: 1px solid #f1f1f1;
  margin-bottom: 25px;
}
 
/* The Close Button (x) */
.close {
  position: absolute;
  right: 35px;
  top: 15px;
  font-size: 40px;
  font-weight: bold;
  color: #f1f1f1;
}

.close:hover,
.close:focus {
  color: #f44336;
  cursor: pointer;
}

/* Clear floats */
.clearfix::after {
  content: "";
  clear: both;
  display: table;
}

/* Change styles for cancel button and signup button on extra small screens */
@media screen and (max-width: 300px) {
  .cancelbtn, .signupbtn {
     width: 100%;
  }
}

.float-child {
    width: 50%;
    float: left;
    padding: 10px;
} 

h1 {
  font-size: 3vw;
  margin-left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  position: relative;
  padding-bottom: 1%;
  color: black;
}


h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 110%;
    height: 2px;
    background-color: #000;
  }

.my_inputs{
  height: 6vh;
  font-size: 1.5vw;

}

.my_labels{
  height: 6vh;
  font-size: 1.5vw;

}

.float-container{
  margin-top: 15%;
}
.my_container {
    display: flex;
    align-items: center; /* Center contents vertically within the container */
}

.my_container p {
    font-size: 25px;
    margin: 0 5%; 
    color: black;
    flex: 1; /* Take up remaining horizontal space */
}

a{
  font-size: 25px;
  color: darkblue;
}

</style> 

<div class = "right">

<div id="id01" class="signup">
  <span onclick="window.location.href='/'" class="close" title="Close Modal">&times;</span>
  <form action="/login_process" method = "post">
    <div class="container" style = "background-color: whitesmoke;">
      <h1>Log In</h1>
      <hr>
      <label for="email" class = "my_labels"><b>Employee ID</b></label>
      <input type="text" placeholder="Enter Employee ID" name="id" id="id" class = "my_inputs" required>
        <label for="psw" class = "my_labels"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" id="psw" class = "my_inputs" required>

  <div class="clearfix">
    <button type="button" onclick="window.location.href='/'" class="cancelbtn">Cancel</button>
    <button type="submit" class="signupbtn">Log in</button>
 </form>
</div>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
    window.location.href = '/index'; // Redirect to index on modal close
  }
}
</script>
