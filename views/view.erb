<style>

/* Add padding to container elements */
.container {
  padding: 5px;
  margin: 6 auto;
}


/* Modal Content/Box */
.edit {
  background-color: whitesmoke;
  border: 2px solid #D8F3EC;
  height: 92%;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
  border-radius: 25px;
  padding-left: 5%;
  padding-right: 5%;
  margin: 0 auto;
}

/* Style the horizontal ruler */
hr {
  border: 1px solid #f1f1f1;
  margin-bottom: 25px;
}
 
/* The Close Button (x) */
.close {
  position: absolute;
  right: 35px;
  top: 15px;
  font-size: 40px;
  font-weight: bold;
  color: #f1f1f1;
}

.close:hover,
.close:focus {
  color: #f44336;
  cursor: pointer;
}



h1 {
  font-size: 2vw;
  margin-left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  position: relative;
  padding-bottom: 1%;
  color: black;
}


h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 110%;
    height: 2px;
    background-color: #000;
  }

  .my_container {
    display: flex;
    align-items: center; /* Center contents vertically within the container */
}

.my_container p {
    font-size: 25px;
    margin: 0 2%; 
    color: black;
    flex: 1; /* Take up remaining horizontal space */
}
#user-table {
  margin-top: 20px;
  border-collapse: collapse;
  width: 95%;
  margin: 0 auto;
}

  #user-table th, #user-table td {
    border: 1px solid #4CAF50; /* Green border */
    padding-top: 15px;
    padding-bottom: 15px;
    padding-left: 3vw;
    padding-right: 3vw;
    text-align: left;
  }
  #user-table th {
    background-color: #4CAF50; /* Green background for headers */
    color: white; /* White text for headers */
  }
  #user-table tr:nth-child(even) {
    background-color: #f2f2f2; /* Light gray background for even rows */
  }
  #user-table tr:hover {
    background-color: #D0F0C0; /* Light green background for hover effect */
  }
  #user-table td:hover{
    background-color: #A2E182;
  }

  .delete-button {
      background-color: #ff6347;
      color: white; /* White text for the delete button */
      border: none;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }

  .table-container {
    margin: 20px auto;
  }
</style>

<div class = "right">
<div id="id01" class="edit">
<span onclick="window.location.href='/admin_main'" class="close" title="Close Modal">&times;</span>
<form action="/view" method = "post">
  <div class="container">
  <div id = "user-table">
    <h1>View Work History</h1>
    <hr>
    <div class = "table-container">
    <table>
    <thead>
      <tr>
        <th>Time In</th>
        <th>Time Out</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @times.each do |time| %>
        <tr>
          <td><%= time.time_in %></td>
          <td><%= time.time_out %></td>
          <td> 

            <button class = "edit-button" data-id="<%= time.id_in %>"data-id2="<%= time.id_out %>" formaction = "/time_edit" >Edit</button> 
          </td>
          <td>
            <button class="delete-button" data-id="<%= time.id_in %>"data-id2="<%= time.id_out %>" formaction = "/time_delete" >X</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
  <input type="hidden" id="user_id_input" name="user_id">
   <input type="hidden" id="in_id_input" name="id_in">
   <input type="hidden" id="out_id_input" name="id_out">
    </div>
    </form>
    <form action = "" method = "post">
    <label for="first_name" class = "my_labels"><b>Add Clock In</b></label>
      <input type="text" placeholder = "Ex. 2023-8-6 14:32:32" name="in_time" class = "my_inputs" id="in_time" required>
      <label for="last_name" class = "my_labels"><b>Add Clock Out</b></label>
      <input type="text" placeholder = "Ex. 2023-8-6 14:32:32" name="out_time" class = "my_inputs" id="out_time" required>
      <button type="submit" formaction = "/add_time" class="update-button"><b>Add Time</b></button>
      <input type="hidden" id="user_id_input" value = <%= @user_id %> name="user_id">
    </form>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  // Fetch user data and update the table
  $(document).ready(function() {
    $.get('/times', function(data) {
      $('#user-table').html(data);
    });
  });// JavaScript to handle user deletion
  $(document).ready(function() {
    $('.delete-button').click(function() {
      const id_in = $(this).data('id');
      const id_out = $(this).data('id2');
  
      // Populate the hidden input field in the form with the user ID
      $('#in_id_input').val(id_in);
      $('#out_id_input').val(id_out);
  
      // Submit the form
      $('form').submit();
    });
  });

  $(document).ready(function() {
    $('.edit-button').click(function() {
      const id_in = $(this).data('id');
      const id_out = $(this).data('id2');
  
      // Populate the hidden input field in the form with the user ID
      $('#in_id_input').val(id_in);
      $('#out_id_input').val(id_out);
  
      // Submit the form
      $('form').submit();
    });
  });

// Work history download
$(document).ready(function () {
  $('.work_history').click(function () {
    const userId = $(this).data('id');
      
     // Populate the hidden input field in the form with the user ID
    $('#user_id_input').val(userId);

    // Submit the form
    $('form').submit();
    
  });
});

</script>

